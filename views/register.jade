doctype html
html(lang="en")

  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM", crossorigin="anonymous")
    link(rel="stylesheet", href="/public/stylesheets/.css")
    script(src='/javascripts/validregister.js')
    title REGISTER

  body
    html
      section.vh-100(style="background-color: #eee;")
        .container.h-100
          .row.d-flex.justify-content-center.align-items-center.h-100
            .col-lg-12.col-xl-11
              .card.text-black(style="border-radius: 25px;")
                .card-body.p-md-5
                  .row.justify-content-center
                    .col-md-10.col-lg-6.col-xl-5.order-2.order-lg-1

                      p.text-center.h1.fw-bold.mb-5.mx-1.mx-md-4.mt-4 Sign up

                      form(id = "form" action="/register", method="post")
                        
                        .d-flex.flex-row.align-items-center.mb-4
                          .form-outline.flex-fill.mb-0
                            input#username.form-control(name="usname", type="text", )
                            label.form-label(for="form3Example1c") Username

                        .d-flex.flex-row.align-items-center.mb-4
                          .form-outline.flex-fill.mb-0
                            input#email.form-control( name="email", type="email", )
                            label.form-label(for="form3Example1c") Email

                        .d-flex.flex-row.align-items-center.mb-4
                          .form-outline.flex-fill.mb-0
                            input#password.form-control(name="password", type="password", )
                            label.form-label(for="form3Example4c") Password

                        .d-flex.flex-row.align-items-center.mb-4
                          .form-outline.flex-fill.mb-0
                            input#password2.form-control(name="repetpw", type="password", )
                            label.form-label(for="form3Example4cd") Repeat your password

                        .d-flex.justify-content-center.mx-4.mb-3.mb-lg-4
                          button.btn.btn-primary.btn-lg(type="submit", onclick="window.location.href='/register'") Register
